body {
  overflow-x: hidden;
}

:root {
  --frost-100: #8fbcbb;
  --frost-200: #88c0d0;
  --frost-300: #81a1c1;
  --blue: #5e81ac;
  --red: #bf616a;
  --orange: #d08770;
  --yellow: #ebcb8b;
  --green: #a3be8c;
  --purple: #b48ead;
}

.dark {
  --white: #0e0e22;
  --gray-100: #375880;
  --gray-200: #1f4068;
  --gray-300: #162447;
  --gray-400: #131d35;
  --font-bold: #efeeff;
  --font-muted: #9fafc4;
  --accent: #04c4a8;
  --accent-bright: #10d9bc;
  --black: #020217;
  --focus: pink;
}

