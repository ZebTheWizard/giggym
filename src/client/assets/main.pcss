.dark,
.light {
  transition: all 0.5s;
}

@media (prefers-color-scheme: dark) {
  .default-theme {
    @apply dark;
  }
}

@media (prefers-color-scheme: light) {
  .default-theme {
    @apply light;
  }
}

button:focus,
[role^="button"]:focus,
.focus:focus {
  outline: var(--focus) 4px dotted;
  outline-offset: 2px;
}

.top-100 {
  top: 100%;
}

.aspect {
  position: relative;
}
.aspect::before {
  content: "";
  display: block;
}
.aspect-75:before {
  padding-top: 75%;
}
.aspect-square:before {
  padding-top: 100%;
}

.challenge-card {
  @apply flex flex-col absolute left-0 right-0 top-0 bottom-0 justify-between;
}
.tag {
  @apply rounded-full py-1 px-4;
}

.btn {
  @apply font-bold py-1 px-3 uppercase text-sm rounded-full flex items-center;
}

.horizontal-scroll {
  overflow: auto;
  white-space: pre;
  -ms-overflow-style: none;
  scrollbar-width: none;
  padding-bottom: 10rem;
  margin-bottom: -9rem;
  padding-left: 10rem;
  margin-left: -10rem;
  margin-right: -10rem;
}
.horizontal-scroll::-webkit-scrollbar {
  display: none;
}

.elevated {
  /* box-shadow: 0 7px 8px -4px rgba(0, 0, 0, 0.1), 0 12px 17px 2px rgba(0, 0, 0, 0.08),
    0 5px 22px 4px rgba(0, 0, 0, 0.06); */
}

.elevated:hover {
  box-shadow: 0 2px 1px -1px rgba(0, 0, 0, 0.3), 0 1px 1px 0 rgba(0, 0, 0, 0.24),
    0 1px 3px 0 rgba(0, 0, 0, 0.22);
}

.rounded-xl {
  border-radius: 1rem;
}

.rounded-r-xl,
.rounded-t-xl {
  border-top-right-radius: 1rem;
}

.rounded-t-xl,
.rounded-l-xl {
  border-top-left-radius: 1rem;
}

.rounded-r-xl,
.rounded-b-xl {
  border-bottom-right-radius: 1rem;
}

.rounded-b-xl,
.rounded-l-xl {
  border-bottom-left-radius: 1rem;
}

.challenge-image-transition {
  transition: all 1s;
  opacity: 1;
}

.tech-logo {
  max-height: 100%;
  z-index: 10;
  --shadow: rgba(0, 0, 0, 0.15);
  filter: drop-shadow(2px 2px 5px var(--shadow)) drop-shadow(2px -2px 5px var(--shadow))
    drop-shadow(-2px -2px 5px var(--shadow)) drop-shadow(-2px 2px 5px var(--shadow));
}
.challenge-image {
  filter: saturate(0);
}
.challenge-image:hover {
  filter: saturate(1);
}

.colored {
  filter: brightness(0.45) saturate(0.5);
}
