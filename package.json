{
  "name": "giggym",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server/index.js",
  "engines": {
    "node": "10"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "client:asset:build": "parcel build src/client/assets/* --out-dir dist/client/assets --public-url /assets && cp -r src/client/assets/devicon dist/client/assets",
    "client:dev": "npm run tslint:fix && npm run client:asset:build && parcel serve src/client/index.html --target browser --out-dir dist/client --port 3000",
    "client:build": "npm run client:asset:build && parcel build src/client/index.html --target browser --out-dir dist/client",
    "server:hydrate:build": "parcel build src/client/index_ssr.tsx --out-dir dist/client/assets --public-url /assets",
    "server:hydrate:watch": "parcel watch src/client/index_ssr.tsx --out-dir dist/client/assets --public-url /assets",
    "server:parcel:build": "parcel build src/server/index.tsx --target node --out-dir dist/server --no-source-maps",
    "server:parcel:watch": "parcel watch src/server/index.tsx --target node --out-dir dist/server --no-source-maps",
    "server:tsc": "tsc --project src/server --outDir dist/server",
    "server:functions": "firebase serve --only functions,hosting",
    "server:dev": "npm run client:asset:build && npm run tslint:fix && rm -rf dist/client/index.html && npm-run-all --parallel server:parcel:watch server:functions server:hydrate:watch",
    "server:build": "tsc --project src/server --outDir dist",
    "deploy": "npm run server:hydrate:build && npm run client:build && npm run server:build && npm run firebase:deploy",
    "firebase:deploy": "npm run tslint:fix && rm -rf dist/client/index.html && firebase deploy --only functions:ReactApp,hosting",
    "tslint": "tslint './src/**/*.{ts,tsx}'",
    "tslint:fix": "npm run tslint -- --fix",
    "tslint:check": "tslint-config-prettier-check ./tslint.json",
    "prettier": "prettier --write --config ./.prettierrc './src/**/*.{ts,tsx}'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-brands-svg-icons": "^5.14.0",
    "@fortawesome/pro-solid-svg-icons": "^5.14.0",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "firebase": "^7.18.0",
    "firebase-admin": "^9.0.0",
    "firebase-functions": "^3.9.0",
    "react": "^16.13.1",
    "react-clamp-lines": "^3.0.2",
    "react-dom": "^16.13.1",
    "react-frontload": "^1.1.0",
    "react-helmet": "^6.1.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@tailwindcss/custom-forms": "^0.2.1",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/react-helmet": "^6.1.0",
    "@types/react-router-dom": "^5.1.5",
    "autoprefixer": "^9.8.6",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.0.5",
    "react-content-loader": "^5.1.0",
    "tailwindcss": "^1.6.2",
    "tailwindcss-elevation": "^0.3.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "tslint-react": "^5.0.0",
    "typescript": "^3.9.7"
  }
}
